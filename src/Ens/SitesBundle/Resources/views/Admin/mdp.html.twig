{% extends 'EnsSitesBundle::admin.html.twig' %}
{% form_theme mdp_form _self %}
 
{% block field_errors %}
{% spaceless %}
  {% if errors|length > 0 %}
    <ul class="error_list">
      {% for error in errors %}
        <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
      {% endfor %}
    </ul>
  {% endif %}
{% endspaceless %}
{% endblock field_errors %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
 
{% block content %}
  <h1>modification mot de passe</h1>
  <form action="{{ path('ens_admin_mdp', { 'id': user.id }) }}" method="post" {{ form_enctype(mdp_form) }}>
    <table id="mdp_form">
      <tfoot>
        <tr>
          <td colspan="2">
            <input type="submit" value="changer mot de passe" />
          </td>
        </tr>
      </tfoot>
      <tbody>
        <tr>
          <th>{{ form_label(mdp_form.username) }}</th>
          <td>
            {{ form_errors(mdp_form.username) }}
            {{ form_widget(mdp_form.username) }}
          </td>
       </tr>
       <tr>
        <th></th>
          <td>
            {{ form_errors(mdp_form.password) }}
            {{ form_widget(mdp_form.password) }}
          </td>
        </tr>


      </tbody>
    </table>
 
    {{ form_rest(mdp_form) }}
  </form>
{% endblock %}