{% extends 'EnsSitesBundle::layout.html.twig' %}
{% form_theme form _self %}
 
{% block field_errors %}
{% spaceless %}
  {% if errors|length > 0 %}
    <ul class="error_list">
      {% for error in errors %}
        <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
      {% endfor %}
    </ul>
  {% endif %}
{% endspaceless %}
{% endblock field_errors %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}
 
{% block content %}
  <h1>Contact</h1>
  <div class="grid-contenair grid-parent">
  <div class="grid-60">
  <form action="{{ path('ens_contact_create') }}" method="post" {{ form_enctype(form) }}>
    <table id="contact_form">
      <tfoot>
        <tr>
          <td>
            <input type="submit" value="{{'contact.send'|trans}}" />
          </td>
        </tr>
      </tfoot>
      <tbody>
        <tr>
          <th>{{ form_label(form.prenom)}}</th>
          <td>
            {{ form_errors(form.prenom) }}
            {{ form_widget(form.prenom) }}
          </td>
        </tr>
        <tr>
          <th>{{ form_label(form.nom) }}</th>
          <td>
            {{ form_errors(form.nom) }}
            {{ form_widget(form.nom) }}
          </td>
        </tr>
        <tr>
          <th>{{ form_label(form.commune) }}</th>
          <td>
            {{ form_errors(form.commune) }}
            {{ form_widget(form.commune) }}
          </td>
        </tr>
        <tr>
          <th>{{ form_label(form.entreprise) }}</th>
          <td>
            {{ form_errors(form.entreprise) }}
            {{ form_widget(form.entreprise) }}
          </td>
        </tr>
        <tr>
          <th>{{ form_label(form.mail) }}</th>
          <td>
            {{ form_errors(form.mail) }}
            {{ form_widget(form.mail) }}
          </td>
        </tr>
        <tr>
          <th>{{ form_label(form.tel) }}</th>
          <td>
            {{ form_errors(form.tel) }}
            {{ form_widget(form.tel) }}
          </td>
        </tr>
        <tr>
          <th>{{ form_label(form.titre) }}</th>
          <td >
            {{ form_errors(form.titre) }}
            {{ form_widget(form.titre) }}
          </td>
        </tr>
      <tr>
          <th>{{ form_label(form.file) }}</th>
          <td>
            {{ form_errors(form.file) }}
            {{ form_widget(form.file) }}
          </td>
        </tr>
        <tr>
          <th>{{ form_label(form.contenu) }}</th>
          <td >
            {{ form_errors(form.contenu) }}
            {{ form_widget(form.contenu) }}
          </td>
        </tr>

      </tbody>
    </table>
 
    {{ form_rest(form) }}
  </form>
  </div>

  <div class="grid-40" >

    <table>
      <tbody>
      <tr>
      <th>{{'contact.tel'|trans}} :</th> <td>06.67.21.75.01.</td>
    </tr>
    
    <tr>
    <th>{{'contact.adress'|trans}}</th><td> à la page – écriture  <br>
                    11 bis rue du Champ Thébault<br> TRESSAINT<br> {{'contact.adress2'|trans}}</td>
      </tr>
    </tbody>
    </table>
    </div>
    </div>
{% endblock %}